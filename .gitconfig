[core]
    pager = delta
    autocrlf = input
[interactive]
    diffFilter=delta --color-only
[user]
    useConfigOnly = true
[credential]
    helper = store


[difftool]
    prompt = true
[diff]
    tool = nvimdiff
[difftool "nvimdiff"]
    cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""
[difftool "codediff"]
    cmd = "code -d \"$LOCAL\" \"$REMOTE\""

[merge]
 tool = nvim -d
 confictstyle = diff3

[pull]
	rebase = true

[includeIf "gitdir:~/repos/*/gitlab.neasenergy.com/"]
    path = ~/repos/local/github.com/valorl/dotfiles/.gitconfig_cet
[includeIf "gitdir:~/repos/local/work.local/"]
    path = ~/repos/local/github.com/valorl/dotfiles/.gitconfig_cet

[includeIf "gitdir:~/repos/*/github.com/"]
    path = ~/repos/local/github.com/valorl/dotfiles/.gitconfig_gh
[includeIf "gitdir:~/repos/local/personal.local/"]
    path = ~/repos/local/github.com/valorl/dotfiles/.gitconfig_gh

[delta]
    features = mantis-shrimp

[delta "mantis-shrimp"]
    #author: https://github.com/2kabhishek
    dark = true
    navigate = true
    keep-plus-minus-markers = true
    hyperlinks = true
    file-added-label = [+]
    file-copied-label = [==]
    file-modified-label = [*]
    file-removed-label = [-]
    file-renamed-label = [->]
    file-style = omit
    zero-style = syntax
    syntax-theme = Monokai Extended
    commit-decoration-style ="#ff5500" box
    commit-style = "#FFD21A" bold italic
    hunk-header-decoration-style = "#1688f0" box ul
    hunk-header-file-style = "#FFD21A" ul bold "#640BFF"
    hunk-header-line-number-style = "#FFD21A" box bold
    hunk-header-style = file line-number syntax bold italic
    line-numbers = true
    line-numbers-left-format = "{nm:>1}|"
    line-numbers-left-style = "#1688f0"
    line-numbers-minus-style = red bold
    line-numbers-plus-style = green bold
    line-numbers-right-format = "{np:>1}|"
    line-numbers-right-style = "#1688f0"
    line-numbers-zero-style = "#aaaaaa" italic
    minus-emph-style = syntax bold "#b80000"
    minus-style = syntax
    plus-emph-style = syntax bold "#007800"
    plus-style = syntax
    whitespace-error-style = "#280050"
