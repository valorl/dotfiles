#!/bin/sh

case $1 in
    "personal")
        git config --global user.name "valorl"
        git config --global user.email "11498571+valorl@users.noreply.github.com"
        exit 0
        ;;
    "work")
        git config --global user.name "vao"
        git config --global user.email "valer.orlovsky@centrica.com"
        exit 0
        ;;
    *)
        echo "Profile '$1' unknown"
        exit 1
        ;;
esac


